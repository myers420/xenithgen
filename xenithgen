    </footer>

    <script>
        // List of accounts as stock (this is where you store your account data)
        const accountStock = [
            "user1@example.com:password1",
            "user2@example.com:password2",
            "user3@example.com:password3"
        ];

        function generateAccount() {
            const resultDiv = document.getElementById("genResult");
            const accountInfo = document.getElementById("accountInfo");

            if (accountStock.length > 0) {
                // Get the first account from stock
                const account = accountStock.shift(); // Remove it from the stock
                accountInfo.textContent = account;
            } else {
                // If no account is available
                accountInfo.textContent = "Account out of stock!";
            }

            resultDiv.style.display = "block"; // Show the result
        }

        function copyToClipboard() {
            const accountInfo = document.getElementById("accountInfo").textContent;
            const tempInput = document.createElement("textarea");
            tempInput.value = accountInfo;
            document.body.appendChild(tempInput);
            tempInput.select();
            document.execCommand("copy");
            document.body.removeChild(tempInput);
            alert("Account info copied to clipboard: " + accountInfo);
        }
    </script>
